{
    "coc.source.around.enable" : true,
    "coc.preferences.jumpCommand": "vsp",
    "pyright.disableProgressNotifications": true,
    "pyright.completion.importSupport": false,
    "pyright.completion.snippetSupport": false,
    "python.analysis.autoImportCompletions": false,
    "python.linting.pylintEnabled": false,
    "pyright.inlayHints.variableTypes": false,
    "pyright.inlayHints.functionReturnTypes": false,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.diagnosticSeverityOverrides": {
        "reportGeneralTypeIssues": "warning",
        "reportMissingTypeStubs": "none",
        "reportOptionalCall": "none",
        "reportOptionalMemberAccess": "none",
        "reportOptionalSubscript": "none"
    },
    "suggest.minTriggerInputLength": 5,
    "suggest.snippetsSupport": false,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
            },
        "fortran": {
            "command": "fortls",
            "filetypes": ["fortran"],
            "rootPatterns": [".fortls", ".git/"]
        }
    },
    "rust-analyzer.server.path": "rust-analyzer",
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/16.0.2/clangd_16.0.2/bin/clangd"
}
