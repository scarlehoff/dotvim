{
    "coc.source.around.enable" : true,
    "python.linting.pylintEnabled": false,
    "python.analysis.typeCheckingMode": "basic",
    "pyright.disableProgressNotifications": true,
    "pyright.disableProgressWindow": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportGeneralTypeIssues": "warning",
        "reportMissingTypeStubs": "none",
        "reportOptionalCall": "none",
        "reportOptionalMemberAccess": "none",
        "reportOptionalSubscript": "none"
    },
    "suggest.minTriggerInputLength": 4,
    "languageserver": {
        "bash": {
        "command": "bash-language-server",
        "args": ["start"],
        "filetypes": ["sh"],
        "ignoredRootPaths": ["~"]
        },
        "fortran": {
            "command": "fortls",
            "filetypes": ["fortran"],
            "rootPatterns": [".fortls", ".git/"]
        }
    },
    "rust-analyzer.server.path": "rust-analyzer",
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/14.0.0/clangd_14.0.0/bin/clangd"
}
